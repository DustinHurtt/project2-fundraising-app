<h2>All Campaigns</h2>

<div class=" ">
    {{#each campaigns}}

    <ul>

  
        <img src="{{this.imageUrl}}" alt="room pic"> 
        <p> {{this.name}} </p>
        <p> {{this.description}} </p>
        <p> {{this.duration}} weeks </p>
        <p> {{this.goal}} </p>
        <ul>
        {{#each this.pledges}}
        <li>
            <h5>{{this.comment}}</h5>
            <p>-{{this.user.fullName}}</p>
            <p>-${{this.amount}}</p>
        </li>
        {{/each}}
        
        </ul>
        <a href="/pledges/{{this._id}}/add-pledge">Donate to this campaign</a>

<hr>

</ul>

    {{/each}}

</div>

    <a href="/campaigns/my-campaigns">See My Campaigns</a>